<view class="location">
  <image src="/images/loca.png"></image>
  郑州
</view>

<view class="temperature">{{now.temp}}℃</view>

<view class="info">
  <view class="weather">{{now.text}}</view>
  <text>|</text>
  <view class="air {{realtime.airColor}}">48 优</view>
</view>

<view class="other">
  <text>风力 {{now.windScale}}</text>
  <text>风向 {{now.windDir}}</text>
  <text>相对湿度 {{now.humidity}}</text>
</view>

<view class="future">
  <view class="day">
    <view class="temp">
      <view class="textbox">
        <text>今天</text>
      </view>
      <view>{{today.tempMin}}/{{today.tempMax}}℃</view>
    </view>
    <view class="weather">
      <text>{{today.textDay}}</text>
      <image src="/images/weather/多云.png"></image>
    </view>
  </view>
  <view class="vertical-line"></view>
  <view class="day">
    <view class="temp">
      <view class="textbox">
        <text>明天</text>
      </view>
      <view>{{tomorrow.tempMax}}/{{tomorrow.tempMin}}℃</view>
    </view>
    <view class="weather">
      <text>{{tomorrow.textDay}}</text>
      <image src="/images/weather/{{tomorrow.textDay}}.png"></image>
    </view>
  </view>
</view>

