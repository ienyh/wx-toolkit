    <view class="temp">
      <view class="textbox">
        <text>今天</text>
      </view>
      <view>28/35℃</view>
    </view>
    <view class="weather">
      <text>阴转多云</text>
      <image src="/images/weather/多云.png"></image>
    </view>
  </view>
  <view class="vertical-line"></view>
  <view class="day">
    <view class="temp">
      <view class="textbox">
        <text>明天</text>
      </view>
      <view>28/34℃</view>
    </view>
    <view class="weather">
      <text>小雨</text>
      <image src="/images/weather/小雨.png"></image>
    </view>
  </view>
